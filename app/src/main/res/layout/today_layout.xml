<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pullrupee_bc_img"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/transprent_background_rectangle"
        android:orientation="vertical"
        android:padding="@dimen/login_margin_top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:weightSum="2">


            <TextView
                android:id="@+id/txt_profit_loss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/login_margin_top"
                android:layout_weight="1"
                android:gravity="left"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/edit_text_size1"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_profit_loss_in_prcnt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/login_margin_top"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/edit_text_size1"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/label_top_screen"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/edit_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/transprent_background_rectangle"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="@string/fund_transaction"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/edit_text_size" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/transprent_background_rectangle"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="@string/label_holding"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/edit_text_size" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/transprent_background_rectangle"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="@string/label_mtf_alert"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/edit_text_size" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        android:weightSum="2">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/login_margin_top"
            android:layout_weight="1"
            android:gravity="left"
            android:text="@string/label_today_tips_description"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/edit_text_size1" />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/login_margin_top"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:text="@string/label_follow_tips"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/edit_text_size1" />
    </LinearLayout>

</LinearLayout>

